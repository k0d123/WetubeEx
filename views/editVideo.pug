extends layouts/main

block content
    .form-container
        form(action=routes.editVideo(video.id), method="post")
            input(type="text", placeholder="Title", name="title" value= video.title)
            textarea(placeholder="Description", name="description")=video.description
            input(type="submit", vlaue="Update Video")
        a.form-conatainer__link.form-container__link--delete(href=routes.deleteVideo(video.id)) 
            button Delete Video
